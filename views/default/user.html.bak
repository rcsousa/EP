<form class="form-horizontal" method="post" style="margin-top:30px;">
  <div class="form-group">
    <label for="auth_user_username" class="col-md-4 control-label">Usuário:</label>
    <div class="col-md-4">
      <input type="text" class="form-control" id="auth_user_username" name="username" placeholder="Usuário">
    </div>
  </div>
  <div class="form-group">
    <label for="auth_user_password" class="col-md-4 control-label">Senha:</label>
    <div class="col-md-4">
      <input type="password" class="form-control" id="auth_user_password" name="password" placeholder="Senha">
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-7 col-md-10">
      <button type="submit" class="btn btn-primary">Login</button>
    </div>
  </div>
{{=form.custom.end}}
