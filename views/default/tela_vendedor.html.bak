  <table class="table table-striped">

    <tbody>
        {{for x in docs:}}
        <tr>
            <td class="col-md-6">
                {{for unit in x[0]['item']:}}
                {{=unit}}<br>
                {{pass}}
                <br><br>
                <h4><span class="label label-primary">{{=x[0]['timestamp']}}</span></h4></td>
            </td>
            <td>
                {{for unit in x[0]['valor']:}}
            Preço: {{=unit}}<br>
                {{pass}}<hr>
                
                <h4><span class="label label-warning">Total do Pedido: {{=str(x[1]).replace(".",",")}}</span></h4></td>
            </td>
            <td align="center">
            {{if "Aprovado" in x[0]['status_easypay']:}}
            <img id="{{=x[0]['_id']}}" class="img-rounded" src="/easypay/static/images/ok.png" style="width:40px;height:40px">
            {{elif "Rejeitado" in x[0]['status_easypay']:}}
            <img id="{{=x[0]['_id']}}" class="img-rounded" src="/easypay/static/images/rejeitar.png" style="width:40px;height:40px">
            {{else:}}
            <img id="{{=x[0]['_id']}}" class="img-rounded" src="/easypay/static/images/pending.png" style="width:40px;height:40px">
        {{pass}}
            <br><br><button id="{{=x[0]['image_name']}}" name="gerar_qrcode" class="btn btn-primary" type="submit" onclick=gera_qrcode(this.id);>Gerar Código</button></td>
        </tr>
        {{pass}}
    <tr><td></td><td><h3><span class="label label-info">Total: {{=total}}</span></h3></td><td></td></tr>
    </tbody>
  </table>

