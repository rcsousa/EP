        //var valor = document.getElementById("valor").value;
        var postData  = {
                        "ordem" :{ "item" : item, "quantidade" : quantidade, "valor" : valor, "figura": figura},
                        "canal" : "caixa-1" 
                        };


        //confirm(JSON.stringify(postData));
        $( "form" )[ 0 ].reset();
        $.ajax(
            {
